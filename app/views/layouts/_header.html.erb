<header>
  <h1><%= link_to "Visualize the World", root_path %></h1>
  <nav>
    <% if logged_in? %>
      <div class='dropdown'>
        <input type='checkbox' id='toggle-account'>
        <label for='toggle-account'>
          <span>Account</span>
          <span class='arrow'>&#9662;</span>
        </label>
        <div class='dropdown-content'>
          <%= link_to "Manage my maps", maps_path %>
          <%= link_to "Account settings", user_path %>
          <%= link_to "Log out", logout_path, method: 'delete' %>
        </div>
      </div>
    <% else %>
      <%= link_to "Log in", login_path %>
      <%= link_to "Create an account", signup_path %>
    <% end %>
  </nav>
</header>
